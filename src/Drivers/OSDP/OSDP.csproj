        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <OutDir>$(SolutionDir)Aporta\bin\$(Configuration)\$(TargetFramework)\Drivers\OSDP</OutDir>
        <RootNamespace>Aporta.Drivers.OSDP</RootNamespace>
        <AssemblyName>Aporta.Drivers.OSDP</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="OSDP.Net" Version="1.0.0-beta4" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\Aporta.Extensions\Aporta.Extensions.csproj" />
    </ItemGroup>
</Project>
