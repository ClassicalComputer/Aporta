@layout RootLayout
@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="true">
        <Bar Background="Background.Light"
             ThemeContrast="ThemeContrast.Light">
            <BarBrand>
                <BarItem>
                    <BarLink To="">
                        <Heading Size="HeadingSize.Is3">Aporta</Heading>
                    </BarLink>
                </BarItem>
            </BarBrand>
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="IconName.Home"/>
                            Home
                        </BarLink>
                    </BarItem>
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Wrench"/>
                                Configuration
                            </BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdownItem To="configuration/drivers">Drivers</BarDropdownItem>
                                
                                <BarDropdownItem To="configuration/doors">Doors</BarDropdownItem>
                                <BarDropdownItem To="configuration/inputs">Inputs</BarDropdownItem>
                                <BarDropdownItem To="configuration/outputs">Outputs</BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                    <BarItem>
                        <BarLink To="monitoring">
                            <BarIcon IconName="IconName.Video"/>
                            Monitoring
                        </BarLink>
                    </BarItem>
                </BarStart>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is4.OnX">
        @Body
    </LayoutContent>
</Layout>
