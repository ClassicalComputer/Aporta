@layout RootLayout
@inherits LayoutComponentBase

<Layout>
    <LayoutHeader>
        <Bar Breakpoint="Breakpoint.Desktop" 
             NavigationBreakpoint="Breakpoint.Tablet"
             Mode="BarMode.Horizontal" 
             CollapseMode="BarCollapseMode.Small">
            <BarBrand>
                <BarItem>
                    <BarLink To="">
                        <Heading Size="HeadingSize.Is3">Aporta</Heading>
                    </BarLink>
                </BarItem>
            </BarBrand>
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="IconName.Home"/>
                            Home
                        </BarLink>
                    </BarItem>
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Wrench"/>
                                Configuration
                            </BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdownItem To="extensions">Extensions</BarDropdownItem>
                                <BarDropdownItem To="configuration/outputs">Outputs</BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Lock"/>
                                Access Control
                            </BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdownItem To="control">Control</BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                </BarStart>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is4.OnX">
        @Body
    </LayoutContent>
</Layout>

@code{
    private bool _siderVisible = true;
    
    void ToggleSidebar()
    {
        _siderVisible = !_siderVisible;
        StateHasChanged();
    }
}