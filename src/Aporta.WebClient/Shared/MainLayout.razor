@layout RootLayout
@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="false">
        <Bar Background="Background.Light"
             ThemeContrast="ThemeContrast.Light"
             Breakpoint="Breakpoint.Desktop">
            <BarBrand>
                <BarItem>
                    <BarLink To="">
                        Aporta
                    </BarLink>
                </BarItem>
            </BarBrand>
            <BarToggler />
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="IconName.Home"/>
                            Home
                        </BarLink>
                    </BarItem>
                    
                    <BarItem>
                        <BarLink To="monitoring">
                            <BarIcon IconName="IconName.Video"/>
                            Monitoring
                        </BarLink>
                    </BarItem>
               
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Wrench"/>
                                Configuration
                            </BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdown>
                                    <BarDropdownToggle>
                                        Access
                                    </BarDropdownToggle>
                                    <BarDropdownMenu>
                                        <BarDropdownItem To="configuration/people" Target="Target.Self">People</BarDropdownItem>   
                                    </BarDropdownMenu>
                                </BarDropdown>
                                <BarDropdown>
                                    <BarDropdownToggle>
                                        Hardware
                                    </BarDropdownToggle>
                                    <BarDropdownMenu>
                                        <BarDropdownItem To="configuration/drivers" Target="Target.Self">Drivers</BarDropdownItem>
                                        <BarDropdownItem To="configuration/doors" Target="Target.Self">Doors</BarDropdownItem>
                                        <BarDropdownItem To="configuration/inputs" Target="Target.Self">Inputs</BarDropdownItem>
                                        <BarDropdownItem To="configuration/outputs" Target="Target.Self">Outputs</BarDropdownItem>
                                    </BarDropdownMenu>
                                </BarDropdown>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                </BarStart>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is4.OnX">
        @Body
    </LayoutContent>
</Layout>
