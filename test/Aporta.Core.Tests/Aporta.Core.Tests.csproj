<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>

        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="nunit" Version="3.13.2" />
        <PackageReference Include="NUnit3TestAdapter" Version="4.2.0" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
        <PackageReference Include="SignalR.UnitTestingSupport.NUnit" Version="5.0.0" />
        <PackageReference Remove="Packaging.Targets" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\Aporta.Core\Aporta.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <DriverFiles Include="bin\$(Configuration)\Drivers\**" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="bin\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="bin\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="bin\**" />
    </ItemGroup>

    <Target Name="CopyDrivers" AfterTargets="AfterBuild">
        <Copy SourceFiles="@(DriverFiles)" DestinationFiles="@(DriverFiles->'$(OutDir)\Drivers\%(RecursiveDir)%(Filename)%(Extension)')" />
    </Target>

</Project>
